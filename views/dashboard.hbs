<html>
  <head>
    <link href="/css/dashboard.css" rel="stylesheet">
    <title>Class Dashboard | blueprint</title> 
  </head>
  <body>
   {{>topnav}}
    <div class="main-content">
      <ul class="breadcrumb">
        <li><a href="/home">blueprint</a></li>
        <li>Classes</li>
      </ul> 
      {{#if notif}}
      <div id="notif">
        <h6>{{notif}}</h6>
      </div>
      {{/if}}
      <div id="class-list">
        <h1>Your Classes</h1>
        <h5>A list of all your classes for the term. Click on any of the classes below!</h5><hr>
          {{#each results}}
            {{>class}}
          {{else}}
            <h3 style="text-align: center; padding: 40px">You have no classes yet.</h3>
          {{/each}}
      </div>
    </div>
  </body>
</html>
